<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Заливка кнопки -->
            <solid android:color="#E0F2F0" />

            <!-- Скруглённые углы -->
            <corners android:radius="14dp" />

            <!-- Обводка кнопки -->
            <stroke
                android:width="1dp"
                android:color="#000000" />
        </shape>
    </item>
</selector>
