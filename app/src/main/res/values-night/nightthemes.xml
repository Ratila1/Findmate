<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.Findmate" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/green1</item>
        <item name="colorPrimaryDark">@color/green1</item>
        <item name="colorAccent">@color/activityText</item>
        <item name="android:statusBarColor">@color/green1</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <!-- Dark Theme -->
    <style name="Theme.Findmate.Dark" parent="Theme.AppCompat.DayNight">
        <item name="android:windowBackground">#272727</item> <!-- Тёмный фон -->
        <item name="android:textColorPrimary">#FFFFFF</item> <!-- Белый текст -->
        <item name="android:textColorSecondary">#FFFFFF</item> <!-- Белый текст для второстепенного текста -->
    </style>

    <style name="CustomAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonTint">#2A7A78</item>
        <item name="android:textColorPrimary">#2A7A78</item>
    </style>
</resources>
